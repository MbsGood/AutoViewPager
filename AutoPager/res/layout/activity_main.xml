<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/activity_marketing_auto_scroll_layout"
        android:layout_width="fill_parent"
        android:layout_height="135dp" >

        <com.example.autopager.AutoScrollViewPager
            android:id="@+id/activity_marketing_ad_viewpager"
            android:layout_width="match_parent"
            android:layout_height="135dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_marketing_ad_indicator"
        android:layout_width="fill_parent"
        android:layout_height="23dp"
        android:layout_below="@id/activity_marketing_auto_scroll_layout"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>